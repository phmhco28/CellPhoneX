@model CellPhoneX.Models.product

@{
    ViewBag.Title = "Thêm sản phẩm mới";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 style="margin-bottom: 2rem">Tạo sản phẩm mới</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-2" for="product_name">Tên sản phẩm </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.product_name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.product_name, "", new { @class = "text-danger" })
        </div>
    </div>
    <hr />

    <div class="form-group">
        <label class="control-label col-md-2" for="release_date">Ngày ra mắt </label>
        <div class="col-md-10">
            @Html.TextBox("release_date", "", "{0:yyyy-MM-dd}", new { @style = "width:100%", type = "date" })
        </div>
    </div>
    <hr />

    <div class="form-group">
        <label class="control-label col-md-2" for="specs_id">Mã thông số </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.specs_id, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.specs_id, "", new { @class = "text-danger" })
        </div>
    </div>
    <hr />

    <div class="form-group">
        <label class="control-label col-md-2" for="phone_brand_id">Thương hiệu</label>
        <div class="col-md-10">
            @Html.DropDownList("phoneBrand")
        </div>
    </div>
    <hr />

    <div class="form-group">
        <label class="control-label col-md-2" for="description">Mô tả </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
        </div>
    </div>
    <hr />

    <div class="form-group">
        <label class="control-label col-md-2" for="promotion_id">Mã khuyến mãi </label>
        <div class="col-md-10">
            @Html.DropDownList("promotion")
        </div>
    </div>
    <hr />

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10" style="padding-right: 20rem;float:right; text-align:right; width:50px">
            <input type="submit" value="Create" class="btn btn-success" />
        </div>
        <div style="padding-left: 3.5rem">
            <a class="btn btn-primary" href="@Url.Action("Product","Admin")"><   Quay lại</a>
        </div>
    </div>
</div>
}

<style>
    .container-fluid {
        padding: 0 15rem 0 18rem;
    }
</style>
