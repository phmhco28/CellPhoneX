@model CellPhoneX.Models.account

@{
    ViewBag.Title = "EditAccount";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 style="margin-bottom: 2rem">Chỉnh sửa tài khoản</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <hr/>

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2" for="account_id">Mã tài khoản </label>
            <div class="col-md-10">
                <div style="font:18px;padding: 5px 0 0 5px"> <strong>@Model.account_id</strong></div>
            </div>
        </div>
        <hr />

        <div class="form-group">
            <label class="control-label col-md-2" for="username">Tên đăng nhập </label>
            <div class="col-md-10">
                <div style="font:18px;padding: 5px 0 0 5px"> <strong>@Model.username</strong></div>
            </div>
        </div>
        <hr />

        <div class="form-group">
            <label class="control-label col-md-2" for="password">Mật khẩu </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
            </div>
        </div>
        <hr />

        <div class="form-group">
            <label class="control-label col-md-2" for="description">Quyền </label>
            <div class="col-md-10">
                <div style="font:18px;padding: 5px 0 0 5px"> <strong>@Model.role.role_name</strong></div>
            </div>
        </div>
        <hr />

        <div class="form-group" style="margin-top: 3rem">
            <div class="col-md-offset-2 col-md-10" style="padding-right: 20rem;float:right; text-align:right; width:50px">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
            <div style="padding-left: 3.5rem">
                <a class="btn btn-primary" href="@Url.Action("Account","Admin")"><   Quay lại</a>
            </div>
        </div>
    </div>
}
<style>
    .container-fluid {
        padding: 0 15rem 0 18rem;
    }
</style>

