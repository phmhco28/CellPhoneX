
@{
    ViewBag.Title = "History";
    Layout = "~/Views/Shared/_CusLayout.cshtml";
    var listI = (List<invoice>)ViewBag.listIn;
}
@using CellPhoneX.Models
<link href="~/Content/body.css" rel="stylesheet" />
<link href="~/Content/member.css" rel="stylesheet" />
<section class="cps-section">
    <div class="cps-container">
        <div class="cps-left-col">
            <div class="block-menu">
                <div class="block-menu__item-menu">
                    <a href="@Url.Action("Cus","Home")">
                        <div class="box-icon">

                        </div>
                        <p>Thông tin</p>
                    </a>
                </div>
                <div class="block-menu__item-menu">
                    <a href="@Url.Action("History","Home")">
                        <div class="box-icon">

                        </div>
                        <p>Lịch sử mua hàng</p>
                    </a>
                </div>
                <div class="block-menu__item-menu">
                    <a href="@Url.Action("Logout","User")">
                        <div class="box-icon">

                        </div>
                        <p>Đăng xuất</p>
                    </a>
                </div>
            </div>
        </div>
        <div class="cps-right-col">
            <div class="content">
                <table class="table">
                    <tr>
                        <th> Mã Hóa Đơn </th>
                        <th> Ngày Đặt Hàng</th>
                        <th> Ngày dự kiến giao</th>
                        <th> Trạng thái</th>
                        <th> Chi tiết</th>
                        <th></th>
                    </tr>

                    @foreach (var item in listI)
                    {
                <tr>
                    <td id="invoiceID" data-id="@item.invoice_id">@item.invoice_id</td>
                    <td>@item.order_date</td>
                    <td>@item.deliver_date</td>
                    @if(item.invoice_status_pay == null)
                    {
                    <td>
                        Đang giao
                    </td>
                    }
                else
                {
                <td>
                    Hoàn tất
                </td>
                }
                    <td>
                        @Html.ActionLink("Chi tiết","Details", new { id = item.invoice_id })
                    </td>
                    
                </tr>
                    }
                </table>
            </div>
        </div>
    </div>

</section>
